{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "ES2017",
    "module": "ES2020",
    "strict": true,
    "strictPropertyInitialization": false,
    "esModuleInterop": true,
    "outDir": "./lib/esm",
    "declaration": true,
    "moduleResolution": "node",
    "paths": {
      "src/*": ["./src/*"]
    },
    "types": ["jest", "node"]
  },
  "include": ["src"],
  "exclude": ["**/*.test.ts"]
}
